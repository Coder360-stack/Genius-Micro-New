<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40mdp"
    android:background="@drawable/background_dueloan"
    android:layout_margin="@dimen/_4mdp"
    android:orientation="horizontal"
    android:padding="@dimen/_2mdp"
    android:elevation="@dimen/_2mdp">

    <TextView
        android:id="@+id/loancode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black"
        android:textSize="@dimen/_9font_mdp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        android:layout_marginTop="@dimen/_4mdp"
        android:layout_marginBottom="@dimen/_4mdp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_9font_mdp"
        android:ellipsize="end"
        android:maxLines="1" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        android:layout_marginTop="@dimen/_4mdp"
        android:layout_marginBottom="@dimen/_4mdp" />

    <LinearLayout
        android:id="@+id/phonelayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_9font_mdp"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageView
            android:layout_width="@dimen/_14mdp"
            android:layout_height="@dimen/_14mdp"
            android:src="@drawable/phone"
            android:layout_marginEnd="@dimen/_2mdp"
            android:contentDescription="Phone" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        android:layout_marginTop="@dimen/_4mdp"
        android:layout_marginBottom="@dimen/_4mdp" />

    <TextView
        android:id="@+id/DueEmiNo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:gravity="center"
        android:text="0.0"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_11font_mdp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        android:layout_marginTop="@dimen/_4mdp"
        android:layout_marginBottom="@dimen/_4mdp" />

    <TextView
        android:id="@+id/DueEmiAmt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0.0"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_11font_mdp" />

</LinearLayout>