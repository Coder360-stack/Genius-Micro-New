<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30mdp"
    android:gravity="center"
    android:background="@drawable/statement_background_white_greenstoke"
    android:layout_marginVertical="@dimen/_3mdp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/acccode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".9"
        android:gravity="center"
        android:text="--"
        android:layout_marginStart="@dimen/_2mdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_11font_mdp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="~"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/_11font_mdp"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="~"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_9font_mdp"/>
    <TextView
        android:id="@+id/depositamt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0.0"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="@dimen/_11font_mdp"/>
    <TextView
        android:id="@+id/withdrawamt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:gravity="center"
        android:text="0.0"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="@dimen/_11font_mdp"/>

</LinearLayout>
