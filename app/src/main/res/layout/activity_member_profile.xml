<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray2"
    tools:context=".activities.MemberProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40mdp"
        android:background="@drawable/bottom_rec"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_20mdp"
            android:layout_height="@dimen/_20mdp"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_7mdp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Member Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_14font_mdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50mdp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_90mdp"
            android:layout_height="@dimen/_90mdp"
            android:layout_gravity="center_horizontal"
            app:cardElevation="@dimen/_2mdp"
            app:cardCornerRadius="@dimen/_42mdp"
            android:layout_marginBottom="-45dp">
            <ImageView
                android:id="@+id/proimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_profile" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/orange2"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_10mdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_50mdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Member Name"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Member ID"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_3mdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="@string/app_name"/>
                        <TextView
                            android:id="@+id/mcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="GTech"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_90mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:background="@color/gray2"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Date Of Birth"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Date Of Join"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_3mdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="00/00/2024"/>
                        <TextView
                            android:id="@+id/doj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="9999999999"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_90mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:background="@color/gray2"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13font_mdp"
                        android:text="Address"/>
                    <TextView
                        android:id="@+id/addr"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12font_mdp"
                        android:text="Sector V, Kolkata"/>

                    <View
                        android:layout_width="@dimen/_90mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:background="@color/gray2"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_gravity="center_horizontal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Blood Group"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Gender"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_3mdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/bloodgr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="O-"/>
                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="Male"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_90mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:background="@color/gray2"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Phone No"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Pin Code"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_3mdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/phoneno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="O-"/>
                        <TextView
                            android:id="@+id/pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="Male"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_90mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:background="@color/gray2"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="Guardian Name"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13font_mdp"
                            android:text="ID Proof"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_3mdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/gname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="O-"/>
                        <TextView
                            android:id="@+id/idproofname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:text="Male"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_90mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:background="@color/gray2"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>