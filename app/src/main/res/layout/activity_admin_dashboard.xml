<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/background_light"
    tools:context=".activities.AdminDashboardActivity">

    <!-- Top AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_blue"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_activity_member_dashboard_welcome_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/logoutbtn"
                    android:layout_width="@dimen/_30mdp"
                    android:layout_height="@dimen/_30mdp"
                    android:src="@drawable/logout"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/white" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_70mdp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Dashboard Header Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16mdp"
                app:cardCornerRadius="@dimen/_12mdp"
                app:cardElevation="@dimen/_4mdp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16mdp"
                    android:background="@drawable/gradient_card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin Dashboard"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18mdp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_110mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:text="Welcome to your administrative panel"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="@dimen/_12mdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dashboard Content Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/admindetailscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_8mdp"
                app:cardCornerRadius="@dimen/_12mdp"
                app:cardElevation="@dimen/_3mdp"
                android:layout_marginBottom="@dimen/_10mdp"
                app:layout_constraintTop_toBottomOf="@id/headerCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16mdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reports"
                        android:textColor="@color/background_blue"
                        android:textSize="@dimen/_16mdp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_50mdp"
                        android:layout_height="@dimen/_2mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:background="@color/background_blue" />

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16mdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_blue">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_report"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tvDailyCollectionRpt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Loan Collection Report"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:id="@+id/TodayLoanColl"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_purple">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_report"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tvDailyPolicyCollectionRpt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Policy Collection Report"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16mdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:id="@+id/tvAdminDashAccountSavingsTransReport"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_green">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_report"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tvAdmin_ApproveLoan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Savings Collection Report"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:id="@+id/tdaysavings"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_orange">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_business"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tv_admin_dash_new_renew_report"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:text="Renew Business"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Today Savings Collection"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />



                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16mdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_red">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_report"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tv_admin_dash_executive_collection_report"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Employee Collection Report"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_cyan">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_sheet"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tvactivityAdminLoanDueReport"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Loan Due Report"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16mdp"
                        android:layout_marginBottom="@dimen/_8mdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_teal">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_report"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/tv_admin_dash_chain_report"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Chain Report"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_100mdp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_8mdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/_8mdp"
                            app:cardElevation="@dimen/_2mdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/_8mdp"
                                android:background="@drawable/card_gradient_blue">

                                <ImageView
                                    android:layout_width="@dimen/_32mdp"
                                    android:layout_height="@dimen/_32mdp"
                                    android:src="@drawable/ic_report"
                                    app:tint="@color/white" />



                                <TextView
                                    android:id="@+id/AdminChainReport"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8mdp"
                                    android:gravity="center"
                                    android:text="Chain Report"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:labelVisibilityMode="unlabeled"
        app:itemHorizontalTranslationEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:elevation="@dimen/_8mdp"
        android:visibility="gone"
        app:itemIconTint="@color/selector_color"
        app:itemTextColor="@color/selector_color"

        app:menu="@menu/admin_bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>