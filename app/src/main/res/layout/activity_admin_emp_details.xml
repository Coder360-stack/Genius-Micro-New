<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.AdminEmpDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Employee Details"
                android:textColor="@color/white"
                android:textSize="@dimen/_18mdp"
                android:textStyle="bold">
            </TextView>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/detailslayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F5F7FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100mdp"
                android:layout_height="@dimen/_100mdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20mdp"
                app:cardCornerRadius="@dimen/_50mdp"
                app:cardElevation="@dimen/_4mdp"
                android:elevation="@dimen/_30mdp"
                android:layout_marginBottom="-40dp">

                <ImageView
                    android:id="@+id/proimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/_2mdp"
                    android:background="@color/white"
                    android:src="@drawable/ic_profile" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginBottom="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_8mdp"
                app:cardCornerRadius="@dimen/_12mdp"
              >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60mdp"
                        android:background="@color/background_blue" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16mdp">

                            <!-- Employee Name and ID Section -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12mdp"
                                app:cardCornerRadius="@dimen/_8mdp"
                                app:cardElevation="@dimen/_2mdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12mdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Employee Name"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="@string/app_name"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Employee ID"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/mcode"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="GTech"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- DOB and DOJ Section -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12mdp"
                                app:cardCornerRadius="@dimen/_8mdp"
                                app:cardElevation="@dimen/_2mdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12mdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Date Of Birth"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/dob"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="00/00/2024"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Date Of Join"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/doj"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="00/00/2024"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Address Section -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12mdp"
                                app:cardCornerRadius="@dimen/_8mdp"
                                app:cardElevation="@dimen/_2mdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12mdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Address"
                                        android:textColor="@color/background_blue"
                                        android:textSize="@dimen/_11font_mdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/addr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_4mdp"
                                        android:text="Sector V, Kolkata"
                                        android:textColor="#333333"
                                        android:textSize="@dimen/_14font_mdp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Blood Group and Gender Section -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12mdp"
                                app:cardCornerRadius="@dimen/_8mdp"
                                app:cardElevation="@dimen/_2mdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12mdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Blood Group"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/bloodgr"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="O-"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Gender"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/gender"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="Male"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Phone and Pincode Section -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12mdp"
                                app:cardCornerRadius="@dimen/_8mdp"
                                app:cardElevation="@dimen/_2mdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12mdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Phone No"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/phoneno"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="9999999999"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Pin Code"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/pincode"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="700091"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Guardian and ID Proof Section -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12mdp"
                                app:cardCornerRadius="@dimen/_8mdp"
                                app:cardElevation="@dimen/_2mdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12mdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Guardian Name"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/gname"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="Parent Name"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="ID Proof"
                                                android:textColor="@color/background_blue"
                                                android:textSize="@dimen/_11font_mdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/idproofname"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_4mdp"
                                                android:text="Aadhaar Card"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/_14font_mdp" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12mdp"
                                app:cardCornerRadius="@dimen/_8mdp"
                                app:cardElevation="@dimen/_2mdp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12mdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Employee Status"
                                        android:textColor="@color/background_blue"
                                        android:textSize="@dimen/_11font_mdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/isBloack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_4mdp"
                                        android:text="Active"
                                        android:textColor="#07FF10"
                                        android:textSize="@dimen/_14font_mdp" />

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>